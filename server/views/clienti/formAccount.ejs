        <form autocomplete="off" method="POST" action="../auth/register">
          <div class="mb-4">
            <label class="block text-gray-700 mb-2" for="name">
              Nome
            </label>
            <input class="bg-gray-200 p-2 rounded-lg w-full" type="text" id="nome" name="nome" required>
          </div>
          <div class="mb-4">
            <label class="block text-gray-700 mb-2" for="surname">
              Cognome
            </label>
            <input class="bg-gray-200 p-2 rounded-lg w-full" type="text" id="cognome" name="cognome" required>
          </div>
          <div class="mb-4">
            <label class="block text-gray-700 mb-2" for="email">
              Email
            </label>
            <input class="bg-gray-200 p-2 rounded-lg w-full" type="email" id="email" name="email" required>
          </div>
          <div class="mb-4">
            <label class="block text-gray-700
            <div class="mb-4">
              <label class="block text-gray-700 mb-2" for="password">
                Password
              </label>
              <input class="bg-gray-200 p-2 rounded-lg w-full" type="password" id="password" name="password" required>
            </div>
            <div class="mb-4">
              <label class="block text-gray-700 mb-2" for="city">
                Citt√†
              </label>
              <input class="bg-gray-200 p-2 rounded-lg w-full" type="text" id="citta" name="citta" required>
            </div>
            <div class="mb-4">
              <label class="block text-gray-700 mb-2" for="province">
                Provincia
              </label>
              <input class="bg-gray-200 p-2 rounded-lg w-full" type="text" id="provincia" name="provincia" required>
            </div>
            <div class="mb-4">
              <label class="block text-gray-700 mb-2" for="address">
                Indirizzo
              </label>
              <input class="bg-gray-200 p-2 rounded-lg w-full" type="text" id="indirizzo" name="indirizzo" required>
            </div>
            <div class="mb-4">
              <label class="block text-gray-700 mb-2" for="civic_number">
                Numero civico
              </label>
              <input class="bg-gray-200 p-2 rounded-lg w-full" type="text" id="nCivico" name="nCivico" required>
            </div>
            <div class="mb-4">
              <label class="block text-gray-700 mb-2" for="zip_code">
                CAP
              </label>
              <input class="bg-gray-200 p-2 rounded-lg w-full" type="text" id="CAP" name="CAP" required>
            </div>
