<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <title>Shop Easy - Sign in</title>
  </head>
  <body class="bg-gray-100 h-screen">
    <%- include("../layout/navbar.ejs") %>
    <main class="container mx-auto px-4 py-6">
    
      <!-- Form di login -->
      <div class="bg-white p-6 rounded-lg shadow-md">
        <h1 class="text-lg font-medium text-gray-800 mb-4">Login</h1>
        <form  autocomplete="off" method="POST" action="../auth/login">
          <div class="mb-4">
            <label class="block text-gray-700 mb-2" for="email">
              Email
            </label>
            <input class="bg-gray-200 p-2 rounded-lg w-full" type="email" id="email" name="email" required>
          </div>
          <div class="mb-4">
            <label class="block text-gray-700 mb-2" for="password">
              Password
            </label>
            <input class="bg-gray-200 p-2 rounded-lg w-full" type="password" id="password" name="password" required>
          </div>
          <button class="bg-indigo-500 text-white p-2 rounded-lg hover:bg-indigo-600">Login</button>
        </form>
      </div>

